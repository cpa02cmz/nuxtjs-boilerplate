# CI Buildâ€“Runtime Boundary: npm configuration for consistent builds
# Ensures reproducible installs across CI and local environments

# Enforce Node.js version requirements from package.json
engine-strict=true

# Use exact versions for dependencies (reproducibility)
save-exact=true

# Always use package-lock.json for consistency
package-lock=true

# Prefer offline installs when possible (faster CI)
prefer-offline=true

# Audit level for security checks
audit-level=high

# Disable funding messages in CI
fund=false

# Disable update notifications
update-notifier=false
