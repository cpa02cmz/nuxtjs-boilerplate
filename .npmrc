# CI Build-Runtime Boundary Configuration
# Optimizes npm behavior for CI/CD environments

# Prefer offline packages when available (faster builds with warm cache)
prefer-offline=true

# Security: Only fail on high/critical vulnerabilities
audit-level=high

# Reduce CI log noise
fund=false
loglevel=warn
progress=false

# Engine strict mode for consistent environments
engine-strict=true

# Disable npm update notifier (reduces CI log noise)
update-notifier=false
